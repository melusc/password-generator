{
	"rules": {
		"no-mixed-spaces-and-tabs": "off",
		"import/order": [
			"error",
			{
				"newlines-between": "always",
				"warnOnUnassignedImports": true
			}
		],
		"n/file-extension-in-import": "off"
	},
	"overrides": [
		{
			"files": ["**/*.ts"],
			"rules": {
				"@typescript-eslint/indent": "off",
				"@typescript-eslint/quotes": [
					"error",
					"single",
					{
						"avoidEscape": true
					}
				]
			}
		}
	]
}
